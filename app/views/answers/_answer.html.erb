<h4>  &nbsp;&nbsp;&nbsp;&nbsp;Answer </h4>
    <p><div class="minibox"><div class="ellipsis"><%= answer.show_user %></div></div> &nbsp;&nbsp;&nbsp;&nbsp;<%= answer.text %></p></br>
    <% if @current_user == @question_creator %>
       
       	 <% if answer.chosen_answer == true %>
       	      <span id ="answer_that_used_to_be_chosen"><p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> This has been chosen as the selected answer </p></span>
       	 <% else %><div id ="<%= answer.id %>">
    	     <%= form_for [@question, answer], remote: true do |f| %> 
      
                <%= f.hidden_field :chosen_answer, :value => true %> 
	            <%= f.submit "select as the best" %>
	         <% end %></div>
        <% end %>
      
    <% end %>
    <hr>
  